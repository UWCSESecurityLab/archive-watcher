{
  "name": "Archive Watcher",
  "version": "0.1.0",
  "manifest_version": 2,
  
  "description": "Detects and Blocks Archive Escapes in the Wayback Machine",
  
  "permissions": [
    "background", 
    "tabs", 
    "webRequest", 
    "webRequestBlocking", 
    "webNavigation", 
    "http://*/*", 
    "https://*/*"
  ], 

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Archive Watcher"
  },
  
  "background": {
    "scripts": [
      "Background.js"
    ],
    "persistent": true
  }
}
